<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_compents_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/llItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dip"
        >
        <com.procoin.widgets.CircleImageView
            android:id="@+id/ivhead"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/ic_default_head"/>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dip">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="--"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="--"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingBottom="20dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="准确率"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvAccuracyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="--"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总收益(USDT)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvTotalProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="--"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上月收益(USDT)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvLastMonthProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="--"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>





</LinearLayout>