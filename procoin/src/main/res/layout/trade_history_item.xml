<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_compents_bg"
    android:orientation="vertical"
    android:padding="15dip">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textStyle="bold"
            android:textColor="@color/quotation_zhang_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tvSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textStyle="bold"
            android:textColor="@color/c1d3155"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginLeft="20dip"
            android:textColor="@color/c661d3155"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/c1d3155"
            android:textSize="@dimen/font_size_12" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dip">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委托价格(USDT)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="4dip"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEntrustAmountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="委托数量(BTC)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />


            <TextView
                android:id="@+id/tvEntrustAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDealAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交数量(BTC)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvDealAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="4dip"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOpenCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dip">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMyDealAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的成交(BTC)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvMyDealAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="4dip"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_12" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCopyAmounText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="跟单成交(BTC)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />


            <TextView
                android:id="@+id/tvCopyAmoun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dip"
                android:text="--"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llCopyFencheng"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCppyfenchengText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟单分成(USDT)"
                android:textColor="@color/c661d3155"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvCppyfencheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="4dip"
                android:textColor="@color/c1d3155"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>

