<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        style="@style/dividerLine_horizontal"
        android:layout_height="1px" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:background="@color/cfafafa">

        <EditText
            android:id="@+id/etNum"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@drawable/xml_et_bg_4"
            android:gravity="left|center_vertical"
            android:hint="系统会为您筛选包含目标数量的商品"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingRight="50dip"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="USDT"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_12" />

    </FrameLayout>


    <androidx.appcompat.widget.RecyclerView
        android:id="@+id/rvNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:nestedScrollingEnabled="false">

    </androidx.appcompat.widget.RecyclerView>

    <View
        style="@style/dividerLine_horizontal"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvResetNum"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/c3d3a50"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tvFilterNum"
            style="@style/btn_style_4"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="筛选" />

    </LinearLayout>

    <View
        android:id="@+id/viewPopNumCancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c4e000000" />
</LinearLayout>