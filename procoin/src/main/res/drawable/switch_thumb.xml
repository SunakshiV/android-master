<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 底部图标背景 -->
<item   android:state_checked="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval" >
        <size
            android:width="25dp"
            android:height="25dp">
        </size>
        <solid android:color="@color/white"/>
        <stroke android:color="@color/switch_off_bg" android:width="2dip"/>
    </shape>
</item>
<item  android:state_checked="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval" >
        <size
            android:width="25dp"
            android:height="25dp">
        </size>
        <solid android:color="@color/white"/>
        <stroke android:color="@color/switch_on_bg" android:width="2dip"/>
    </shape>
</item>
</selector>

