<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bubble="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView style="@style/circleChatTimeTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="@dimen/circle_chat_max_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/xml_circle_chat_stock_bg_right"
                android:paddingBottom="12dip"
                android:paddingLeft="12dip"
                android:orientation="vertical"
                android:paddingTop="12dip">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="260dip"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPartyHead"
                        android:layout_width="70dip"
                        android:layout_height="70dip"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvContent"
                            android:layout_width="140dip"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:minLines="2"
                            android:maxLines="3"
                            android:lineSpacingExtra="2dip"
                            android:ellipsize="end"
                            android:textColor="@color/c666666"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tvPartyTime"
                            android:gravity="left|top"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c999999"
                            android:textSize="@dimen/font_size_12"
                            />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <com.procoin.widgets.CircleImageView style="@style/circleChatHeadView" />

        </LinearLayout>

</LinearLayout>