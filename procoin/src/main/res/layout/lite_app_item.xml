<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/llItem">

    <com.procoin.widgets.layout.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--android:background="@drawable/shape_lite_app_icon_bg"-->

        <ImageView
            android:id="@+id/ivLiteAppIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <!--app:circle_border_color="@color/cd6d6d6"-->
        <!--app:circle_border_overlay="true"-->
        <!--app:circle_border_width="3dip"-->

    </com.procoin.widgets.layout.SquareLayout>

    <TextView
        android:id="@+id/tvLiteAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="3dip"
        android:text="--"
        android:textColor="@color/c6175ae"
        android:textSize="@dimen/font_size_12" />
    <!--android:background="@drawable/shape_lite_app_name_bg"-->

</LinearLayout>