<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="35dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="20dip">
    <!--@dimen/olstar_home_dialog_fragment_buy_height-->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每次跟单金额"
        android:textColor="@color/c1d3155"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginTop="15dip"
        android:background="@color/cfafafa">

        <EditText
            android:id="@+id/etMaxMoney"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:paddingLeft="10dip"
            android:paddingRight="50dip"
            android:gravity="left|center_vertical"
            android:hint="请输入每次跟单金额"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="#232323"
            android:textColorHint="#e6e6e6"
            android:textSize="@dimen/font_size_18"
            android:background="@color/cf4f5f6"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="right"
            android:text="USDT"
            android:textColor="@color/c1d3155"
            android:textSize="@dimen/font_size_14" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="vertical"
        android:visibility="visible">





        <!--<TextView-->
        <!--android:id="@+id/tvMaxCny"-->
        <!--android:layout_marginTop="5dip"-->
