<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_13"
        android:textColor="@color/c661d3155"
        android:text="成交时间"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/c1d3155"
        android:text="--"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/c661d3155"

            android:text="成交价"/>

        <TextView
            android:id="@+id/tvDealPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/c1d3155"
            android:text="--"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="12dip">
        <TextView
            android:id="@+id/tvDealAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/c661d3155"

            android:text="成交量"/>

        <TextView
            android:id="@+id/tvDealAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/c1d3155"
            android:text="--"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="12dip"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvFeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/cbebebe"

            android:text="手续费"/>

        <TextView
            android:id="@+id/tvFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/c6175ae"
            android:text="--"/>

    </LinearLayout>

</LinearLayout>