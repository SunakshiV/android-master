<com.procoin.widgets.layout.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c4d4d4d">
    <ImageView
        android:id="@+id/ivView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <FrameLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/bg"
        android:layout_gravity="bottom"
        android:alpha="0.6"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/ic_redz_video_logo"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical|right"
            android:textSize="@dimen/font_size_12"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</com.procoin.widgets.layout.SquareLayout>