<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_compents_bg"
    android:orientation="vertical"
    android:padding="15dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.procoin.widgets.CircleImageView
            android:id="@+id/ivHead"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_head"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张乃滔"
            android:textColor="@color/c3d3a50"
            android:textSize="@dimen/font_size_14"
            android:layout_marginLeft="10dip"/>

        <TextView
            android:id="@+id/tvState"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:text="购买中"
            android:background="@drawable/shape_offline"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10"/>


        <TextView
            android:id="@+id/tvOrderCount"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_14"
            />

        <View
            android:layout_height="12dip"
            style="@style/dividerLine_vertical"
            android:background="@color/c9a9a9a"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"/>

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_14"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量  1000 USDT-20000 USDT"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:gravity="right"
                android:text="单价"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限额  ¥1,000-¥30,000"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:gravity="right"
                android:text="¥7.01"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方式"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_12" />

            <androidx.appcompat.widget.RecyclerView
                android:id="@+id/tvWay"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginLeft="10dip"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvBuySell"
                style="@style/btn_style_4"
                android:layout_width="65dip"
                android:layout_height="30dip"
                android:textSize="@dimen/font_size_12"
                android:text="购买" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="类型  购买"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_12" />


            <TextView
                android:id="@+id/tvDelete"
                style="@style/btn_style_7"
                android:layout_width="65dip"
                android:layout_height="30dip"
                android:textSize="@dimen/font_size_12"
                android:text="删除" />

            <TextView
                android:id="@+id/tvOnLine"
                style="@style/btn_style_6"
                android:layout_width="65dp"
                android:layout_height="30dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:text="下架"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvEdit"
                style="@style/btn_style_6"
                android:layout_width="65dip"
                android:layout_height="30dip"
                android:textSize="@dimen/font_size_12"
                android:text="修改" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>