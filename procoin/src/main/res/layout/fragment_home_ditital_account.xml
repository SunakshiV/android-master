<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTolAssetsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数字货币总资产(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/tvTolAssets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/c1d3155"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/tvTolAssetsCny"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="≈¥0.00"
                            android:textColor="@color/c661d3155"
                            android:textSize="@dimen/font_size_12" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRiskRateDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRiskRateMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/ic_question_mark"
                        android:text="风险率"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tvRiskRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0%"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用保证金(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvEableBail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未实现盈亏(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="持仓保证金(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvOpenBail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="冻结保证金"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvFrozenBail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"/>
    </LinearLayout>
    <!--android:nestedScrollingEnabled="false"-->


</androidx.core.widget.NestedScrollView>