<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <!--@dimen/olstar_home_dialog_fragment_buy_height-->
    <LinearLayout
        android:id="@+id/llAppendTop"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:paddingLeft="@dimen/xml_upgold_dialog_horizontal"
            android:paddingRight="@dimen/xml_upgold_dialog_horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="追加金额"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_20" />

            <TextView
                android:id="@+id/tvAppendClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/cbebebe"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用USDT："
            android:textColor="@color/cbebebe"
            android:textSize="@dimen/font_size_12" />

        <EditText
            android:id="@+id/etAppendBalance"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:layout_marginTop="10dip"
            android:hint="请输入追加金额"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="#232323"
            android:textColorHint="#e6e6e6"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            android:background="@color/cf4f5f6"/>

        <TextView
            android:id="@+id/tvTolCny"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="≈¥0.00"
            android:textColor="@color/cf08c42"
            android:textSize="@dimen/font_size_12" />

