<com.procoin.widgets.layout.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c4d4d4d">

    <ImageView
        android:id="@+id/ivView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/flSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:padding="12dip">

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_redz_photo_unselect" />
    </FrameLayout>
</com.procoin.widgets.layout.SquareLayout>