<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="185dip"
            android:layout_height="87dip"
            android:background="@drawable/ic_welcom_loadres_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="正在加载中，请稍等..."
            android:textColor="#007bc1"
            android:textSize="@dimen/font_size_20" />

    </LinearLayout>


    <TextView
        android:id="@+id/welcome_TextView_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:text="redflea.com"
        android:textColor="@color/cb2b2b2"
        android:textSize="@dimen/text_size_content_h1"></TextView>

</RelativeLayout>