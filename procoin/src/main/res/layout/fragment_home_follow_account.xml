<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="12dip"
                android:padding="10dip"
                android:background="@color/cf2f2f2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="带单导师:"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />
                    <com.procoin.widgets.CircleImageView
                        android:id="@+id/ivHead"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dip"
                        android:src="@drawable/ic_default_head"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />


                    <TextView
                        android:id="@+id/tvUnBindView"
                        android:layout_width="50dip"
                        android:layout_height="22dip"
                        android:gravity="center"
                        android:text="解绑"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12"
                        android:visibility="gone"
                        android:background="@drawable/shape_bind_bg"/>

                    <TextView
                        android:id="@+id/tvBindView"
                        android:layout_width="50dip"
                        android:layout_height="22dip"
                        android:gravity="center"
                        android:text="去绑定"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12"
                        android:background="@drawable/shape_bind_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开启跟单:"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />
                    <TextView
                        android:id="@+id/tvOpenFollowState"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="已开启"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/toggleView"
                        style="@style/switchCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跟单倍数:"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />
                    <TextView
                        android:id="@+id/tvMultiple"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="1倍"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvCustom"
                        android:layout_width="50dip"
                        android:layout_height="22dip"
                        android:gravity="center"
                        android:text="自定义"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12"
                        android:background="@drawable/shape_bind_bg"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="12dip"
        android:background="@drawable/shape_follow_switch_bg">
        <TextView
            android:id="@+id/tvDigital"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/xml_follow_btn"
            android:text="数字货币"
            android:gravity="center"
            android:textColor="@color/c661d3155"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="股指期货"
            android:background="@drawable/xml_follow_btn"
            android:gravity="center"
            android:textColor="@color/c661d3155"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>
</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTolAssetsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数字货币总资产(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/tvTolAssets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/c1d3155"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/tvTolAssetsCny"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="≈¥0.00"
                            android:textColor="@color/c661d3155"
                            android:textSize="@dimen/font_size_12" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRiskRateMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRiskRateMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/ic_question_mark"
                        android:text="风险率"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/tvRiskRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0%"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用保证金(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvEableBail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未实现盈亏"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="持仓保证金(USDT)"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvOpenBail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="冻结保证金"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvFrozenBail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"/>
    </LinearLayout>
    <!--android:nestedScrollingEnabled="false"-->


</androidx.core.widget.NestedScrollView>