<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="续费"
            android:textColor="@color/c6175ae"
            android:textSize="@dimen/font_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text=""
            android:textColor="@color/c661d3155"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/xml_et_bg_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"

        >

        <EditText
            android:id="@+id/etBalance"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/c6175ae"
            android:textColorHint="#c8c8c8"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            android:layout_marginRight="15dip"/>

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/c1d3155"
            android:textSize="@dimen/font_size_12" />

        <View style="@style/dividerLine_vertical"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/c661d3155"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="账户余额可用:0 USDT"
        android:textColor="@color/c661d3155"
        android:textSize="@dimen/font_size_12"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"/>
    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="注：订阅或续费后收到该用户的交易策略"
        android:textColor="@color/c1d3155"
        android:textSize="@dimen/font_size_12"
        android:layout_marginTop="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"/>

    <View style="@style/dividerLine_horizontal"
        android:layout_marginTop="20dip"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dip"
    android:layout_marginTop="15dip"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvTolMoney"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="合计：0 USDT"
        android:textColor="@color/c6175ae"
        android:textSize="@dimen/font_size_16"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        />

    <TextView
        style="@style/btn_style_6"
        android:layout_width="70dip"
        android:layout_height="38dip"
        android:text="续费"
        android:layout_marginRight="15dip"
        android:id="@+id/tvBuy"/>

</LinearLayout>



</LinearLayout>