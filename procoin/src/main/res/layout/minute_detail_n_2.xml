<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUnitSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="价格"
            android:textColor="@color/cbebebe"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:gravity="right"
            android:text="数量(手)"
            android:textColor="@color/cbebebe"
            android:textSize="@dimen/font_size_12" />


    </LinearLayout>


    <androidx.appcompat.widget.RecyclerView
        android:layout_marginTop="15dip"
        android:id="@+id/rvSellList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="15dip"/>


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00000000"
        android:textStyle="bold"
        android:textColor="@color/c00ad88"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/tvPriceCash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:text="≈¥0.00"
        android:textColor="@color/cd6d6d6"
        android:textSize="@dimen/font_size_12"
        android:visibility="gone"/>


    <androidx.appcompat.widget.RecyclerView
        android:id="@+id/rvBuyList"
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>
