<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_compents_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/llItem">

    <LinearLayout
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <com.procoin.widgets.CircleImageView
            android:id="@+id/ivhead"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_default_head"/>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dip">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/c1d3155"
                android:textStyle="bold"
                android:text="--"/>

            <TextView
                android:id="@+id/tvDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:layout_marginTop="3dip"
                android:textColor="@color/c661d3155"
                android:text="--"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRenew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvRenew"
                style="@style/btn_style_6"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:textSize="@dimen/font_size_14"
                android:text="续费"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/c1d3155"
                android:layout_marginTop="5dip"
                android:text="0.00"/>

        </LinearLayout>




    </LinearLayout>

    <!--<View-->
        <!--style="@style/dividerLine_horizontal"-->
        <!--android:layout_marginLeft="70dip"/>-->


</LinearLayout>