<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:surround="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dip">

    <com.procoin.http.widget.view.RoundAngleImageView
        android:id="@+id/iv_head"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_common_mic"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCircleName"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingRight="5dip"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_17" />

            <!--<TextView-->
                <!--android:id="@+id/tvCircleId"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ellipsize="end"-->
                <!--android:singleLine="true"-->
                <!--android:text="&#45;&#45;"-->
                <!--android:textColor="@color/ca6a6a6"-->
                <!--android:textSize="@dimen/font_size_12" />-->

            <TextView
                android:id="@+id/tvCircleRoleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle_role_root"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="2dip"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12" />

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="8dip"-->
            <!--android:gravity="center_vertical">-->



            <TextView
                android:id="@+id/tvMemberAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="--"
                android:layout_marginTop="8dip"
                android:textColor="@color/c262626"
                android:textSize="@dimen/font_size_12"

                />
        <!--</LinearLayout>-->

    </LinearLayout>

</LinearLayout>