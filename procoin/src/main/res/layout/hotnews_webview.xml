<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="1dip">


            <ImageButton
                android:id="@+id/ibBack"
                android:layout_width="45dip"
                android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="@drawable/ic_common_back_gray"
                android:visibility="visible" />


            <ImageButton
                android:id="@+id/ibColse"
                android:layout_width="45dip"
                android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="@drawable/ic_webview_close"
                android:visibility="visible" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="5dip">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/tvSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/c808080"
                    android:textSize="@dimen/font_size_12"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tencent.smtt.sdk.WebView
            android:id="@+id/wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--     <ProgressBar -->
        <!--         android:id="@+id/pb" -->
        <!--         style="@android:attr/progressBarStyleHorizontal" -->
        <!--         android:minHeight="3dip" -->
        <!--         android:maxHeight="3dip" -->
        <!--         android:layout_width="match_parent" -->
        <!--         android:layout_height="wrap_content" /> -->

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:progressDrawable="@drawable/xml_webview_progress" />
        <!-- xml_webview_progress -->
    </FrameLayout>
</LinearLayout>