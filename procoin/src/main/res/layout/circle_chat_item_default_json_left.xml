<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bubble="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView style="@style/circleChatTimeTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip">

        <com.procoin.widget.CircleImageView style="@style/circleChatHeadView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<include layout="@layout/circle_name_role"/>-->
            <!--<TextView-->
                <!--android:id="@+id/tvName"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dip"-->
                <!--android:text="吕林青"-->
                <!--android:textSize="@dimen/font_size_10" />-->

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="@dimen/circle_chat_max_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:background="@drawable/xml_circle_chat_bg_left"
                android:paddingBottom="12dip"
                android:paddingLeft="18dip"
                android:orientation="vertical"
                android:paddingTop="12dip">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPartyHead"
                        android:layout_width="80dip"
                        android:layout_height="80dip"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:minLines="2"
                            android:maxLines="3"
                            android:lineSpacingExtra="2dip"
                            android:ellipsize="end"
                            android:textColor="@color/c666666"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tvPartyTime"
                            android:gravity="left|top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c999999"
                            android:textSize="@dimen/font_size_12"
                            android:text=""/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <!--<TextView-->
