<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStep1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/ceeeeee"
            android:gravity="center"
            android:text="1.验证身份"
            android:textColor="@color/c666666"
            android:textSize="@dimen/font_size_13" />

        <ImageView
            android:id="@+id/ivStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pay_pass_2" />

        <TextView
            android:id="@+id/tvStep2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="2.设置密码"
            android:textColor="@color/c666666"
            android:textSize="@dimen/font_size_13" />

        <ImageView
            android:id="@+id/ivStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pay_pass_3" />

        <TextView
            android:id="@+id/tvStep3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="3.确认密码"
            android:textColor="@color/c666666"
            android:background="@color/white"
            android:textSize="@dimen/font_size_13" />


    </LinearLayout>

    <View style="@style/dividerLine_horizontal" />

    <LinearLayout
        android:id="@+id/llStep1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已绑定手机号:"
                android:textColor="@color/c232323"
                android:textSize="@dimen/font_size_13" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="----"
                android:textColor="@color/c232323"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

        <View
            style="@style/dividerLine_horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />

        <LinearLayout
            android:id="@+id/llModifyPayPass"
            android:layout_height="50dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/et_verify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#232323"
                android:textColorHint="#c8c8c8"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_verify"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:text="获取验证码"
                android:textColor="@color/btn_verify"
                android:textSize="@dimen/font_size_10" />
        </LinearLayout>

        <View
            style="@style/dividerLine_horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />

        <TextView
            style="@style/btn_style_4"
            android:layout_marginTop="44dp"
            android:text="下一步"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tvNext1"/>

        <!--<TextView-->
            <!--android:id="@+id/tvNext1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:layout_marginTop="44dp"-->
            <!--android:background="@drawable/btn_login"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:text="下一步"-->
            <!--android:textColor="@color/btn_login"-->
            <!--android:textSize="@dimen/font_size_14" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:text="请输入6位支付密码"
            android:textColor="@color/c232323" />

        <com.procoin.widgets.transactionpassword.GridPasswordView
            android:id="@+id/gpdPayPass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip" />



        <TextView
            style="@style/btn_style_4"
            android:layout_marginTop="44dp"
            android:text="下一步"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tvNext2"/>

        <!--<TextView-->
            <!--android:id="@+id/tvNext2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:layout_marginTop="44dp"-->
            <!--android:background="@drawable/btn_login"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:text="下一步"-->
            <!--android:textColor="@color/btn_login"-->
            <!--android:textSize="@dimen/font_size_14" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStep3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:text="请再次输入6位支付密码"
            android:textColor="@color/c232323" />

        <com.procoin.widgets.transactionpassword.GridPasswordView
            android:id="@+id/gpdPayPassAgain"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip" />

        <TextView
            style="@style/btn_style_4"
            android:layout_marginTop="44dp"
            android:text="完成"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tvComplete"/>
        <!--<TextView-->
            <!--android:id="@+id/tvComplete"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:layout_marginTop="44dp"-->
            <!--android:background="@drawable/btn_login"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:text="完成"-->
            <!--android:textColor="@color/btn_login"-->
            <!--android:textSize="@dimen/font_size_14" />-->
    </LinearLayout>
</LinearLayout>