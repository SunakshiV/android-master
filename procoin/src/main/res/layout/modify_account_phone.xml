        <TextView
            style="@style/btn_style_4"
            android:id="@+id/tvNext2"
            android:text="下一步"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="44dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
    </LinearLayout>

