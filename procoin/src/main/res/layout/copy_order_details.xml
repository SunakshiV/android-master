<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/toolbar">

        <LinearLayout
            android:id="@+id/llParams"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/abc_item_background_holo_dark"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">
            <!--layout_gravity编译器没有这个属性,不知道为何,估计是as的问题,但其实有效果-->
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dip"

                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/actionbar_light_title_color"
                android:textSize="@dimen/font_size_14" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="12dip"
                android:layout_height="12dip"
                app:srcCompat="@drawable/ic_search_arrow" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_redz_no_content" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.procoin.widgets.LoadMoreRecycleView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <LinearLayout
            android:id="@+id/llSelectParams"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/llSelectParamsAnim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:paddingTop="12dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="币种"
                    android:textColor="@color/c6175ae"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCoin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/selector_filter_bg"
                    android:digits="@string/digits"
                    android:hint="请输入币种"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dip"
                    android:textSize="@dimen/font_size_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="订单状态"
                    android:textColor="@color/c6175ae"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip">

                    <TextView
                        android:id="@+id/tvBuy"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:background="@drawable/selector_filter_bg"
                        android:gravity="center"
                        android:text="买入"
                        android:textColor="@color/xml_filter_text"
                        android:textSize="@dimen/font_size_12" />


                    <TextView
                        android:id="@+id/tvSell"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/selector_filter_bg"
                        android:gravity="center"
                        android:text="卖出"
                        android:textColor="@color/xml_filter_text"

                        android:textSize="@dimen/font_size_12" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/tvReset"
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_weight="1"
                        android:background="@drawable/selector_filter_bg"
                        android:gravity="center"
                        android:text="重置"
                        android:textColor="@color/c232323"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvQuery"
                        style="@style/btn_style_6"
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="15dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_14" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/hideSelectParams"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>