<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bubble="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTime"
        style="@style/squareTimeStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip">

        <include
            android:id="@+id/ivHead"
            layout="@layout/addv_image_layout"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="吕林青"
                android:textSize="@dimen/font_size_10" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/xml_circle_chat_bg_left"
                android:gravity="center_vertical|left"
                android:minWidth="60dip"
                android:maxWidth="260dip"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16"
                android:text="赞不支持查看该消息,请升级到最新版"/>

            <!--<com.cropyme.ui.bubbleview.BubbleTextVew-->
            <!--style="@style/circleChatBubbleTextStyle"-->
            <!--android:layout_marginLeft="3dip"-->
            <!--android:layout_marginTop="3dip"-->
            <!--bubble:arrowLocation="left"-->
            <!--bubble:bubbleColor="@color/white" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>