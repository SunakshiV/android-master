<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c6175ae"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            style="@style/toolbar2"
            android:background="@color/c6175ae" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="10dip"
            android:paddingBottom="20dip">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dip">

                    <ImageView
                        android:id="@+id/ivState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_26"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvState"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="请在  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="  内付款给对方"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvStateDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="订单已取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_contact_other" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="联系对方"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCopyTolBalance"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="购买金额"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvTolBalance"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:text="--"
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_20"
                    android:layout_marginRight="10dip"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_copy" />

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="买入单价"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="购买数量"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <!--<View-->
            <!--style="@style/dividerLine_horizontal"-->
            <!--android:layout_marginLeft="15dip"-->
            <!--android:layout_marginRight="15dip" />-->
            <View
                style="@style/dividerLine_horizontal"
                android:layout_height="10dip"
                android:background="@color/pageBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <ImageView
                    android:id="@+id/ivPayLogo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvPayWay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <LinearLayout
                android:id="@+id/llCopyName"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="收款人"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_copy" />

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <LinearLayout
                android:id="@+id/llQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:paddingRight="25dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="收款二维码"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_14" />

                    <ImageView
                        android:id="@+id/ivQr"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:textColor="@color/c6175ae"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    style="@style/dividerLine_horizontal"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="25dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCopyAccount"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:id="@+id/tvPayWayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="支付宝账号"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvPayAccount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_copy" />

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <LinearLayout
                android:id="@+id/llCopyOrderNo"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="订单号"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvOrderNo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_14"/>

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_copy" />

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:paddingRight="25dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="下单时间"
                    android:textColor="@color/c661d3155"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvOrderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/c1d3155"
                    android:textSize="@dimen/font_size_14"/>

            </LinearLayout>

            <View
                style="@style/dividerLine_horizontal"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/shape_dash_tips"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/text_linespacingextra"
                android:paddingBottom="15dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="15dip"
                android:text="请使用本人支付宝向以上转账，转账时请勿添加任何备注。\n在规定时间内完成支付，支付完成后点击【标记为已支付】"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_12" />

            <View
                style="@style/dividerLine_horizontal"
                android:layout_height="10dip"
                android:background="@color/pageBackground" />


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/llBottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dip"
        android:visibility="gone">


        <TextView
            android:id="@+id/tvCancel"
            style="@style/btn_style_5"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:text="取消订单"
            android:textSize="@dimen/font_size_14"/>

        <TextView
            android:id="@+id/tvGoPay"
            style="@style/btn_style_1"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:layout_marginRight="0dip"
            android:layout_marginLeft="15dip"
            android:text="去支付"
            android:textSize="@dimen/font_size_14"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tvSubmit"
            style="@style/btn_style_4"
            android:layout_width="0dip"
            android:layout_marginLeft="15dip"
            android:layout_weight="6"
            android:text="标记为已支付"
            android:textSize="@dimen/font_size_14"/>

    </LinearLayout>


</LinearLayout>