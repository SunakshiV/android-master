<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">
        <LinearLayout
            android:id="@+id/llReason"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_svg_alert"/>

            <TextView
                android:id="@+id/tvReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="8dip"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_12"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实名信息"
                android:textColor="@color/c1a1717"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvAuthenState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_14" />


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/c1a1717"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <View style="@style/dividerLine_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="证件号码"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_14" />


            <TextView
                android:id="@+id/tvCardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/c1a1717"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <View style="@style/dividerLine_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保证金"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tvBond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---- USDT"
                android:textColor="@color/c1a1717"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <View style="@style/dividerLine_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:lineSpacingExtra="@dimen/text_linespacingextra"
            android:text="保证金用于发布出售或购买USDT广告，提交认证信息即时从资产余额中进行冻结。"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_10" />


        <LinearLayout
            android:id="@+id/llCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="top">

            <CheckBox
                android:id="@+id/cbSign"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/text_linespacingextra"
                android:text=""
                android:textColor="@color/c3d3a50"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dip"
                android:lineSpacingExtra="@dimen/text_linespacingextra"
                android:text=""
                android:textColor="@color/c3d3a50"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvApply"
            style="@style/btn_style_6"
            android:layout_marginTop="50dip"
            android:enabled="false"
            android:text="申请商家认证"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvApplyCancel"
            style="@style/btn_style_6"
            android:layout_marginTop="50dip"
            android:enabled="false"
            android:text="申请商家认证"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>