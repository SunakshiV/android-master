<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="70dip"
                    android:text="我想"
                    android:textColor="@color/c1a1717"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvBuy"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="1"
                    android:background="@drawable/xml_add_ad_buysell_selected_bg"
                    android:gravity="center"
                    android:text="购买"
                    android:textColor="@color/xml_add_ad_buysell_selected"
                    android:textSize="@dimen/font_size_14"

                    />

                <TextView
                    android:id="@+id/tvSell"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_weight="1"
                    android:background="@drawable/xml_add_ad_buysell_selected_bg"
                    android:gravity="center"
                    android:text="出售"
                    android:textColor="@color/xml_add_ad_buysell_selected"
                    android:textSize="@dimen/font_size_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USDT"
                    android:textColor="@color/c1a1717"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="70dip"
                    android:text="价格"
                    android:textColor="@color/c1a1717"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@color/cfafafa">

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/xml_et_bg_6"
                        android:gravity="left|center_vertical"
                        android:hint="输入价格"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:paddingRight="80dip"
                        android:textColor="@color/c3d3a50"
                        android:textSize="@dimen/font_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dip"
                        android:gravity="center"
                        android:text="CNY/USDT"
                        android:textColor="@color/c9a9a9a"
                        android:textSize="@dimen/font_size_12" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="70dip">

                <TextView
                    android:id="@+id/tvBestPriceHint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="当前购买最高价"
                    android:textColor="@color/c9a9a9a"
                    android:textSize="@dimen/font_size_10" />

                <TextView
                    android:id="@+id/tvBestPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0.00"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:textColor="@color/c6175ae"
                    android:textSize="@dimen/font_size_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CNY/USDT"
                    android:textColor="@color/c9a9a9a"
                    android:textSize="@dimen/font_size_10" />

                <TextView
                    android:id="@+id/tvIntoBestPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   android:padding="5dip"
                    android:gravity="center"
                    android:text="填入"
                    android:textColor="@color/c6175ae"
                    android:textSize="@dimen/font_size_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:gravity="center"
                    android:minWidth="70dip"
                    android:textColor="@color/c1a1717"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cfafafa">

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/xml_et_bg_6"
                        android:gravity="left|center_vertical"
                        android:hint="输入数量"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:paddingRight="50dip"
                        android:textSize="@dimen/font_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dip"
                        android:gravity="center"
                        android:text="USDT"
                        android:textColor="@color/c9a9a9a"
                        android:textSize="@dimen/font_size_12" />

                </FrameLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center"
                android:text="出售USDT时系统将会从余额账户中冻结该部分资金"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_10"
                android:layout_marginLeft="70dip"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限额"
                    android:gravity="center"
                    android:minWidth="70dip"
                    android:textColor="@color/c1a1717"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cfafafa">

                    <EditText
                        android:id="@+id/etMinCny"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/xml_et_bg_6"
                        android:gravity="left|center_vertical"
                        android:hint="最小"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:paddingRight="40dip"
                        android:text=""
                        android:textSize="@dimen/font_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:text="CNY"
                        android:textColor="@color/c9a9a9a"
                        android:textSize="@dimen/font_size_12" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="@color/c9a9a9a"
                    android:textSize="@dimen/font_size_12" />

                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cfafafa">

                    <EditText
                        android:id="@+id/etMaxCny"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/xml_et_bg_6"
                        android:gravity="left|center_vertical"
                        android:hint="最大"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:paddingRight="40dip"
                        android:textSize="@dimen/font_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:text="CNY"
                        android:textColor="@color/c9a9a9a"
                        android:textSize="@dimen/font_size_12" />

                </FrameLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="30dip"
                android:text="方式（可多选）"
                android:textColor="@color/c1a1717"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />

            <androidx.appcompat.widget.RecyclerView
                android:id="@+id/rvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="15dip"
                android:nestedScrollingEnabled="false" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="30dip"
                android:text="留言内容"
                android:textColor="@color/c1a1717"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/xml_et_bg_6"
                android:gravity="left|top"
                android:hint="请写下您想对卖家/买家说的话！（限140字）"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dip"
                android:textColor="@color/c3d3a50"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tvSubmit"
        style="@style/btn_style_6"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:text="确认发布" />

