<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:id="@android:id/background"  android:gravity="center_vertical">
        <shape  android:shape="rectangle">
            <!--<stroke android:width="1dp" android:color="#dcdcdc"/>-->
            <corners android:radius="3dp"/>
            <solid android:color="#efefef"/>
        </shape>
    </item>

    <item
        android:id="@android:id/progress" android:gravity="center_vertical">
        <clip>
            <shape  android:shape="rectangle">
                <corners android:radius="3dp"/>
                <!--<stroke android:width="1dp" android:color="#dcdcdc"/>-->
                <solid android:color="@color/c6175ae"/>
            </shape>
        </clip>
    </item>
</layer-list>