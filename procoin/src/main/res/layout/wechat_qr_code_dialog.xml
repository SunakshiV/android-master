<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/shape_qr_dialog_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dip"
        android:paddingTop="15dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/c3d3a50"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="5dip"
            android:textColor="@color/c663d3a50"
            android:textSize="@dimen/font_size_12" />


        <ImageView
            android:id="@+id/ivQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/shape_qr_bg"
            android:scaleType="fitStart"
            />

        <TextView
            android:id="@+id/tvSaveQr"
            style="@style/btn_style_4"
            android:layout_marginTop="20dip"
            android:layout_height="40dip"
            android:text="保存二维码到本地"
            android:textSize="@dimen/font_size_12"/>


    </LinearLayout>

</LinearLayout>
