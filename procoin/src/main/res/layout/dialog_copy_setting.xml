        <!--app:bsb_show_thumb_text="true"-->
        <!--app:bsb_thumb_text_size="18sp"-->
        <!--app:bsb_touch_to_seek="true"-->

        <!--/>-->

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sbStopWin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:maxHeight="5dip"
            android:minHeight="5dip"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:progressDrawable="@drawable/seekbar_progess_bg"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb"
            android:thumbOffset="0dp"
            android:background="@null"/>

    </LinearLayout>
    <!--app:bsb_second_track_size=""-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStopLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:minWidth="100dip"
            android:text="止损 无设置"
            android:textColor="@color/c1d3155"
            android:textSize="@dimen/font_size_14"
            />

        <SeekBar
            android:id="@+id/sbStopLoss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:maxHeight="5dip"
            android:minHeight="5dip"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:progressDrawable="@drawable/seekbar_progess_bg"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb"
            android:thumbOffset="0dp"
            android:background="@null"/>

    </LinearLayout>





    <TextView
        style="@style/btn_style_4"
        android:layout_marginTop="20dip" />


</LinearLayout>

