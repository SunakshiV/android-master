            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--android:background="@color/pageBackground"-->
                <!--android:background="@color/cff8f01"-->
                <!--android:background="@drawable/shape_toolbar_gradient_bg"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c6175ae"
                    android:orientation="vertical"
                    android:paddingBottom="25dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="40dip"
                    android:paddingRight="20dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户总资产(USDT)"
                        android:textColor="@color/cccffffff"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvTolAssets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_40"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvTolAssetsCny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_16" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="28dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <!--android:drawableLeft="@drawable/ic_home_money"-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="余额(USDT)"
                                    android:textColor="@color/cccffffff"
                                    android:textSize="@dimen/font_size_12" />

                                <TextView
                                    android:id="@+id/tvRecharge"
                                    android:layout_width="61dip"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dip"
                                    android:background="@drawable/shape_home_charge_bg"
                                    android:gravity="center"
                                    android:text="充 值"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_size_12" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvUsdtBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:text="0.0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_size_18"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前总盈亏(USDT)"
                                android:minHeight="28dip"
                                android:gravity="center"
                                android:textColor="@color/cccffffff"
                                android:textSize="@dimen/font_size_12" />

                            <TextView
                                android:id="@+id/tvTodayProfit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:text="0.0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_size_18"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>






                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:background="@color/white"
                    android:gravity="center_vertical">
                    <!--android:background="@drawable/xml_tab_bottom_line_bg2"-->
                    <TextView
                        android:id="@+id/tvCopyOrder"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:minHeight="40dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/xml_tab_bottom_line_bg"
                        android:gravity="center"
                        android:text="跟单"
                        android:textColor="@color/xml_usdt_tab_text"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPosition"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:minHeight="40dip"
                        android:background="@drawable/xml_tab_bottom_line_bg"
                        android:gravity="center"
                        android:text="持仓"
                        android:textColor="@color/xml_usdt_tab_text"
                        android:textSize="@dimen/font_size_20"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llHide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:layout_marginRight="10dip"
                        >

                        <CheckBox
                            android:id="@+id/cbSign"
                            style="@style/MyCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="   隐藏小额币种"
                            android:textColor="@color/c222222"
                            android:textSize="@dimen/font_size_12" />

                        <ImageView
                            android:id="@+id/ivQuestionMark"
                            android:layout_width="30dip"
                            android:layout_height="50dip"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_question_mark" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llCopyOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.appcompat.widget.RecyclerView
                        android:id="@+id/rvFollowList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvNoDataCopyOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="200dip"
                        android:text="暂无跟单"
                        android:textColor="@color/c666175ae"
                        android:visibility="gone" />

                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="10dip"-->
                    <!--android:background="@color/pageBackground" />-->
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llHoldPostion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.RecyclerView
                        android:id="@+id/rvPositionList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvNoDataPosition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="200dip"
                        android:text="暂无持仓"
                        android:textColor="@color/c666175ae"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>
        <!--</FrameLayout>-->
    </androidx.core.widget.NestedScrollView>


