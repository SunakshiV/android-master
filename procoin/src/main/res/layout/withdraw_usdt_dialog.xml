<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rlSelectAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="30dip">


            <LinearLayout
                android:id="@+id/llAccount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/ivReceiptLogo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                android:layout_marginTop="5dip"
                        app:srcCompat="@drawable/ic_common_mic"
                        />

                    <TextView
                        android:id="@+id/tvAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="---"
                        android:textColor="@color/c6175ae"
                        android:textSize="@dimen/font_size_18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDefault"
                        android:layout_width="50dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/shape_receipt_desc_bg"
                        android:gravity="center"
                        android:text="默认"
                        android:textColor="@color/cff8f01"
                        android:textSize="@dimen/font_size_10"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dip"
                    android:layout_marginTop="5dip"
                    android:text="--"
                    android:textColor="@color/c6175ae"
                    android:textSize="@dimen/font_size_18"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivPayWay"
                android:layout_width="20dip"
                android:layout_height="20dip"
                app:srcCompat="@drawable/ic_common_mic"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                app:srcCompat="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现数量"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical|right"
                android:text="市价: ￥0.00"
                android:textColor="@color/c666175ae"
                android:textSize="@dimen/font_size_12" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:background="@color/cfafafa">

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入提现数量"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingLeft="10dip"
                android:paddingRight="100dip"
                android:text=""

                android:textColor="#232323"
                android:textColorHint="#e6e6e6"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="USDT"
                    android:textColor="@color/ccc6175ae"
                    android:textSize="@dimen/font_size_14" />

                <View
                    style="@style/dividerLine_vertical"
                    android:layout_height="14dip"
                    android:background="@color/ce6e6e6" />

                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/cff8f01"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/tvUsdtBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical|right"
            android:text="目前持有USDT:"
            android:textColor="@color/c666175ae"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="0.00"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            style="@style/btn_style_4"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"
            android:text="提现" />


    </LinearLayout>


</LinearLayout>