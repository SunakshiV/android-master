<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.procoin.widgets.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        style="@style/dividerLine_horizontal"
        android:layout_height="1dip" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/white"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/flMarket"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llMarket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="6dip">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/home_tab_mark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="行情"
                    android:layout_marginTop="3dip"
                    android:textColor="@color/xml_home_tab_text"
                    android:textSize="@dimen/font_size_11" />
            </LinearLayout>


        </FrameLayout>


        <FrameLayout
            android:id="@+id/flHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dip"
                android:paddingLeft="18dip"
                android:paddingRight="12dip"
                android:paddingTop="6dip">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/home_tab_account" />

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dip"
                    android:includeFontPadding="false"
                    android:text="账户"
                    android:textColor="@color/xml_home_tab_text"
                    android:textSize="@dimen/font_size_11" />
            </LinearLayout>
        </FrameLayout>



        <FrameLayout
            android:id="@+id/flCropyme"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llCropyme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dip"

                android:paddingTop="6dip">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/home_tab_cropyme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="首页"
                    android:layout_marginTop="3dip"
                    android:textColor="@color/xml_home_tab_text"
                    android:textSize="@dimen/font_size_11" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flAttention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llAttention"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dip"
                android:paddingLeft="18dip"
                android:paddingRight="12dip"
                android:paddingTop="6dip">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/home_tab_follow" />

                <TextView
                    android:id="@+id/tvAttention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dip"
                    android:includeFontPadding="false"
                    android:text="订阅"
                    android:textColor="@color/xml_home_tab_text"
                    android:textSize="@dimen/font_size_11" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flMine"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/llMine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dip"
                android:paddingLeft="18dip"
                android:paddingRight="12dip"
                android:paddingTop="6dip">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="3dip"
                    app:srcCompat="@drawable/home_tab_mine" />

                <TextView
                    android:id="@+id/tvMine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="我的"
                    android:textColor="@color/xml_home_tab_text"
                    android:textSize="@dimen/font_size_11" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvShowCoin"
                android:layout_width="35dip"
                android:layout_height="15dip"
                android:text=""
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginTop="8dip"
                android:textSize="@dimen/font_size_8"
                android:textColor="@color/white"
                android:background="@drawable/shape_show_coin_bg"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>