<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llSort1"
            android:layout_width="wrap_content"
            android:minWidth="100dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称代码"
                android:textColor="@color/c666175ae"
                android:textSize="@dimen/font_size_12" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSort1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/tvTolCost"
                app:srcCompat="@drawable/ic_svg_sort_default" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSort2"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="最新价"
                android:textColor="@color/c666175ae"
                android:textSize="@dimen/font_size_12" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSort2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/tvTolCost"
                app:srcCompat="@drawable/ic_svg_sort_default" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSort3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="80dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="涨跌幅"
                android:textColor="@color/c666175ae"
                android:textSize="@dimen/font_size_12" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSort3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/tvTolCost"
                app:srcCompat="@drawable/ic_svg_sort_default" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.RecyclerView
        android:id="@+id/rvOptionalList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llOptionalNodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dip"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="182dip"
            android:layout_height="134dip"
            app:srcCompat="@drawable/ic_attention_no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:text="暂无自选～"
            android:textColor="#bec0ce"
            android:textSize="@dimen/font_size_16" />


    </LinearLayout>
</LinearLayout>



