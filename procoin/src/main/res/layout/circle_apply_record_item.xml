<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.procoin.widgets.CircleImageView
            android:id="@+id/ivHeader"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/ic_head_default_photo" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:text="UserName"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:text="time"
            android:textColor="@color/cb2b2b2"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:layout_marginTop="12dip"
        android:text="asdfasdffasdfasdfasdf"
        android:textColor="@color/cb2b2b2"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:id="@+id/llBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">



        <TextView
            android:id="@+id/tvRefuseApply"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_home_search_olstar_card_btn"
            android:gravity="center"
            android:minWidth="120dip"
            android:padding="10dip"

            android:text="@string/refuseApply"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
        <TextView
            android:id="@+id/tvAllowApply"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/allowApply"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16"
            android:layout_marginLeft="10dip"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdfasdffasdfasdfasdf"
        android:textColor="@color/cb2b2b2"
        android:visibility="gone"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:id="@+id/llStateAllowApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right">

        <!--<ImageView-->
            <!--android:layout_width="16dip"-->
            <!--android:layout_height="16dip"-->
            <!--android:src="@drawable/ic_tjrf_checkbox_down" />-->

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="3dip"
            android:text="已同意"
            android:textColor="@color/cffc90c"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

</LinearLayout>