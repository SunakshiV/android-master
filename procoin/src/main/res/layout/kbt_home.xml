                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="≈¥0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="可用"
                            android:textColor="@color/cccffffff"
                            android:textSize="@dimen/font_size_12" />

                        <TextView
                            android:id="@+id/tvEnableBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="0.00000000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="冻结"
                            android:textColor="@color/cccffffff"
                            android:textSize="@dimen/font_size_12" />

                        <TextView
                            android:id="@+id/tvFreezeBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="0.00000000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvEquityLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dip"
                                android:text=""
                                android:visibility="gone"
                                android:gravity="center"
                                android:textColor="@color/cfb875a"
                                android:textSize="@dimen/font_size_9"
                                android:paddingLeft="8dip"
                                android:paddingRight="8dip"
                                android:paddingTop="3dip"
                                android:paddingBottom="3dip"
                                android:background="@drawable/shape_level_bg2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="锁仓"
                                android:textColor="@color/cccffffff"
                                android:textSize="@dimen/font_size_12" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvLockBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="5dip"
                            android:gravity="center"
                            android:text="0.00000000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_12" />

                    </LinearLayout>


                </LinearLayout>

