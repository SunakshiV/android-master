<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlSelectAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cf4f4f4"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:padding="20dip"
            >


            <com.procoin.widgets.CircleImageView
                android:id="@+id/ivReceiptLogo"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:visibility="invisible"
                android:src="@drawable/ic_common_mic"/>

            <TextView
                android:id="@+id/tvType"
                android:layout_toRightOf="@+id/ivReceiptLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="微信"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_14"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/llAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvType"
                android:layout_marginLeft="30dip"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="15220202092"
                    android:textColor="@color/c6175ae"
                    android:textSize="@dimen/font_size_14" />
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/c6175ae"
                    android:textSize="@dimen/font_size_14"
                    android:text="张滔"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textColor="@color/cbebebe"
                android:textSize="@dimen/font_size_18"
                android:text="＋ 添加收款方式"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_marginTop="10dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现数量"
                    android:textColor="@color/c6175ae"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tvUsdtBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目前持有USDT:"
                    android:textColor="@color/c969696"
                    android:textSize="@dimen/font_size_12" />


            </LinearLayout>

            <!--android:background="@drawable/xml_et_bg"-->
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入提现数量"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/c6175ae"
                android:textColorHint="#c8c8c8"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            style="@style/dividerLine_horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市价"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="￥0.00"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/c6175ae"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            style="@style/dividerLine_horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="0.00"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            style="@style/dividerLine_horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/selector_rect_solid_corner0_3d3a50"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_17"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="40dip"/>
    </LinearLayout>




</LinearLayout>